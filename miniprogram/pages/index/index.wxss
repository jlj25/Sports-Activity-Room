/**index.wxss**/
page {
  height: 100vh;
  background-color: #f5f5f5;
}

/* 瀑布流布局样式 */
.masonry-container {
  display: flex;
  width: 100vw;
  box-sizing: border-box;
  padding: 0 8px;
  gap: 8px;
}

.masonry-column {
  flex: 1 1 0;
  min-width: 0;
  max-width: 50%;
  display: flex;
  flex-direction: column;
  gap: 12px;
  box-sizing: border-box;
}

.masonry-column:first-child {
  padding-top: 10px;
}

.masonry-column:last-child {
  padding-top: 10px;
}

.venue-card {
  background: #fff;
  border-radius: 12px;
  overflow: hidden;
  box-shadow: 0 2px 8px rgba(0,0,0,0.1);
  margin-bottom: 12px;
}

.venue-img {
  width: 100%;
  height: 200px;
  object-fit: cover;
}

.venue-badge {
  position: absolute;
  top: 8px;
  left: 8px;
  background: rgba(0,0,0,0.6);
  color: #fff;
  padding: 4px 8px;
  border-radius: 12px;
  font-size: 12px;
}

.venue-info {
  padding: 12px;
  box-sizing: border-box;
}

.venue-info .reserve-btn,
.venue-info .favorite-btn {
  display: inline-block;
  width: calc(50% - 2px);
  box-sizing: border-box;
}

.venue-title {
  font-size: 16px;
  font-weight: bold;
  color: #333;
  margin-bottom: 8px;
  display: block;
}

.venue-rating {
  display: flex;
  align-items: center;
  margin-bottom: 8px;
}

.star {
  color: #ffd700;
  font-size: 12px;
  margin-right: 4px;
}

.score {
  color: #666;
  font-size: 12px;
}

.venue-location {
  color: #999;
  font-size: 12px;
  margin-bottom: 8px;
  display: block;
}

.venue-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 4px;
  margin-bottom: 8px;
}

.tag {
  background: #f0f0f0;
  color: #666;
  padding: 2px 6px;
  border-radius: 8px;
  font-size: 10px;
}

.venue-price {
  display: flex;
  align-items: baseline;
  margin-bottom: 8px;
}

.price {
  color: #ff4757;
  font-size: 16px;
  font-weight: bold;
}

.unit {
  color: #999;
  font-size: 12px;
  margin-left: 2px;
}

.reserve-btn {
  background: #ff4757;
  color: #fff;
  border: none;
  border-radius: 8px;
  padding: 8px 12px;
  font-size: 12px;
  margin-right: 4px;
  flex: 1;
  min-width: 0;
}

.favorite-btn {
  background: #f0f0f0;
  color: #666;
  border: none;
  border-radius: 8px;
  padding: 8px 12px;
  font-size: 12px;
  flex: 1;
  min-width: 0;
}

.button-group {
  display: flex;
  gap: 8px;
  margin-top: 8px;
}

/* 搜索栏样式 */
.search-bar {
  display: flex;
  width: 100vw;
  padding: 10px;
  background: #fff;
  border-bottom: 1px solid #eee;
}

.search-input {
  flex:3;
  padding: 8px 12px;
  border: 1px solid #ddd;
  border-radius: 20px;
  margin-right: 8px;
}

.search-btn {
  flex:1;
  background: #07c160;
  color: #fff;
  border: none;
  border-radius: 20px;
  padding: 8px 16px;
}

/* 分类标签样式 */
.category-tabs {
  white-space: nowrap;
  padding: 10px;
  background: #fff;
  border-bottom: 1px solid #eee;
}

.tab {
  display: inline-block;
  padding: 6px 12px;
  margin-right: 8px;
  background: #f0f0f0;
  color: #666;
  border-radius: 16px;
  font-size: 14px;
}

.tab.active {
  background: #07c160;
  color: #fff;
}

/* 筛选栏样式 */
.filter-bar {
  display: flex;
  padding: 3px;
  background: #fff;
  border-bottom: 1px solid #eee;
}

.filter-item {
  flex: 1;
  text-align: center;
  padding: 8px;
  color: #666;
  font-size: 14px;
}

.loading {
  text-align: center;
  padding: 20px;
  color: #999;
}
