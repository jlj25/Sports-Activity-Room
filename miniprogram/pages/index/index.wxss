/**index.wxss**/
page {
  height: 100vh;
  background-color: #f5f5f5;
}

/* 分类标签 */
.category-tabs {
  white-space: nowrap;
  padding: 16rpx 24rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #eee;
}

.tab {
  display: inline-block;
  padding: 8rpx 24rpx;
  margin-right: 16rpx;
  font-size: 32rpx;
  font-weight: 500;
  color: #666;
  border-radius: 32rpx;
}

.tab.active {
  color: #fff;
  background-color: #07c160;
}

/* 筛选栏 */
.filter-bar {
  display: flex;
  justify-content: space-between;
  padding: 16rpx 24rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #eee;
}

.filter-item {
  font-size: 28rpx;
  color: #333;
  display: flex;
  align-items: center;
}

/* 活动室列表 */
.venue-list {
  padding: 24rpx 16rpx;
  height: calc(100vh - 180rpx);
}

.venue-card {
  background-color: #fff;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
  position: relative;
}

.venue-img {
  width: 100%;
  height: 280rpx;
}

.venue-badge {
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  background-color: #07c160;
  color: #fff;
  font-size: 24rpx;
  padding: 4rpx 16rpx;
  border-radius: 16rpx;
}

.venue-info {
  padding: 20rpx;
}

.venue-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 12rpx;
  display: block;
}

.venue-rating {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.star {
  color: #FFD700;
  font-size: 28rpx;
  margin-right: 8rpx;
}

.score {
  font-size: 28rpx;
  color: #333;
}

.venue-location {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 16rpx;
  display: block;
}

.venue-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-bottom: 16rpx;
}

.tag {
  background-color: #f5f5f5;
  color: #666;
  font-size: 24rpx;
  padding: 4rpx 16rpx;
  border-radius: 16rpx;
}

.venue-price {
  display: flex;
  align-items: baseline;
}

.price {
  font-size: 32rpx;
  font-weight: 500;
  color: #f5222d;
}

.unit {
  font-size: 24rpx;
  color: #666;
  margin-left: 4rpx;
}

.search-bar {
  display: flex;
  align-items: center;
  padding: 16rpx 24rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #eee;
}

.search-bar input {
  flex: 1;
  padding: 8rpx;
  border: 1rpx solid #ccc;
  border-radius: 8rpx;
}

.search-bar button {
  margin-left: 16rpx;
  padding: 8rpx 16rpx;
  background-color: #07c160;
  color: #fff;
  border-radius: 8rpx;
}

.favorite-btn {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  padding: 8rpx 16rpx;
  background-color: #fff;
  border: 1rpx solid #07c160;
  color: #07c160;
  border-radius: 16rpx;
}

.favorite-btn.active {
  background-color: #07c160;
  color: #fff;
}

.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
}
