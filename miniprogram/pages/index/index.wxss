/**index.wxss**/
page {
  height: 100vh;
  background-color: #f5f5f5;
}

/* 瀑布流布局样式 */
.masonry-container {
  display: flex;
  width: 100vw;
  box-sizing: border-box;
  padding: 0 8px;
  gap: 8px;
}

.masonry-column {
  flex: 1 1 0;
  min-width: 0;
  max-width: 50%;
  display: flex;
  flex-direction: column;
  gap: 12px;
  box-sizing: border-box;
}

.masonry-column:first-child {
  padding-top: 10px;
}

.masonry-column:last-child {
  padding-top: 10px;
}

.venue-card {
  background: #fff;
  border-radius: 12px;
  overflow: hidden;
  box-shadow: 0 2px 8px rgba(0,0,0,0.1);
  margin-bottom: 12px;
}

.venue-img {
  width: 100%;
  height: 200px;
  object-fit: cover;
}

.venue-badge {
  position: absolute;
  top: 8px;
  left: 8px;
  background: rgba(0,0,0,0.6);
  color: #fff;
  padding: 4px 8px;
  border-radius: 12px;
  font-size: 12px;
}

.venue-info {
  padding: 12px;
  box-sizing: border-box;
}

.venue-info .reserve-btn,
.venue-info .favorite-btn {
  display: inline-block;
  width: 48%;
  min-width: 0;
  box-sizing: border-box;
}

.venue-title {
  font-size: 16px;
  font-weight: bold;
  color: #333;
  margin-bottom: 8px;
  display: block;
}

.venue-rating {
  display: flex;
  align-items: center;
  margin-bottom: 8px;
}

.star {
  color: #ffd700;
  font-size: 12px;
  margin-right: 4px;
}

.score {
  color: #666;
  font-size: 12px;
}

.venue-location {
  color: #999;
  font-size: 12px;
  margin-bottom: 8px;
  display: block;
}

.venue-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 4px;
  margin-bottom: 8px;
}

.tag {
  background: #f0f0f0;
  color: #666;
  padding: 2px 6px;
  border-radius: 8px;
  font-size: 10px;
}

.venue-price {
  display: flex;
  align-items: baseline;
  margin-bottom: 8px;
}

.price {
  color: #ff4757;
  font-size: 16px;
  font-weight: bold;
}

.unit {
  color: #999;
  font-size: 12px;
  margin-left: 2px;
}

.reserve-btn {
  background: #ff4757;
  color: #fff;
  border: none;
  border-radius: 8px;
  padding: 8px 12px;
  font-size: 12px;
  margin-right: 4px;
  flex: 1;
  min-width: 0;
}

.reserve-btn-disabled {
  background: #eee !important;
  color: #bbb !important;
  border: none !important;
}

.favorite-btn {
  background: #f0f0f0;
  color: #666;
  border: none;
  border-radius: 8px;
  padding: 8px 12px;
  font-size: 12px;
  flex: 1;
  min-width: 0;
}

.favorite-btn-active {
  background: #ffd700 !important;
  color: #fff !important;
  border: none !important;
}

.button-group {
  display: flex;
  gap: 8px;
  margin-top: 8px;
  width: 100%;
  justify-content: center;
}

/* 详情页面的按钮组样式 */
.detail-container .button-group {
  flex-direction: row;
  align-items: center;
  justify-content: center;
  gap: 0rpx;
  margin-top: 30rpx;
  border-radius: 32rpx;
  overflow: hidden;
  box-shadow: 0 4px 16px rgba(255,71,87,0.10);
  width: 90vw;
  margin-left: auto;
  margin-right: auto;
}
.reserve-btn, .favorite-btn {
  flex: 1;
  min-width: 0;
  font-size: 12px;
  padding: 8px 0;
  border-radius: 8px;
  margin: 0;
}
.detail-reserve-btn, .detail-favorite-btn {
  flex: 1;
  min-width: 0;
  font-size: 28rpx;
  padding: 20rpx 0;
  border-radius: 0;
  box-shadow: none;
  margin: 0;
}

/* 搜索栏样式 */
.search-bar {
  display: flex;
  width: 100%;
  box-sizing: border-box;
  padding: 6px 12px;
  background: #fff;
  border-bottom: 1px solid #eee;
  align-items: center;
  gap: 8px;
}

.search-input {
  flex: 3;
  min-width: 0;
  padding: 6px 12px;
  border: 1px solid #ddd;
  border-radius: 20px;
}

.search-btn {
  flex:1;
  flex-shrink: 0;
  min-width: 60px;
  background: #07c160;
  color: #fff;
  border: none;
  border-radius: 20px;
  padding: 6px 16px;
  margin-left: 8px;
}

/* 分类标签样式 */
.category-tabs {
  white-space: nowrap;
  padding: 6px;
  background: #fff;
  border-bottom: 1px solid #eee;
}

.tab {
  display: inline-block;
  padding: 4px 12px;
  margin-right: 8px;
  background: #f0f0f0;
  color: #666;
  border-radius: 16px;
  font-size: 14px;
}

.tab.active {
  background: #07c160;
  color: #fff;
}

/* 筛选栏样式 */
.filter-bar {
  display: flex;
  padding: 4px;
  background: #fff;
  border-bottom: 1px solid #eee;
}

.filter-item {
  flex: 1;
  text-align: center;
  padding: 4px;
  color: #666;
  font-size: 14px;
}

.loading {
  text-align: center;
  padding: 20px;
  color: #999;
}

.detail-container {
  background: #fff;
  border-radius: 18px 18px 0 0;
  box-shadow: 0 -2px 16px rgba(0,0,0,0.06);
  margin: 0;
  padding: 0 0 32px 0;
  min-height: 100vh;
  position: relative;
  animation: fadeInUp 0.3s;
}

@keyframes fadeInUp {
  from { transform: translateY(40px); opacity: 0; }
  to { transform: translateY(0); opacity: 1; }
}

.back-btn {
  position: fixed;
  top: 30rpx;
  left: 30rpx;
  z-index: 1000;
  background: rgba(255,255,255,0.8);
  border-radius: 50%;
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  box-shadow: 0 2px 8px rgba(0,0,0,0.08);
  border: none;
  color: rgba(0,0,0,0.7);
  padding: 0;
  overflow: hidden;
}

.detail-img {
  width: 92vw;
  height: 320rpx;
  object-fit: cover;
  border-radius: 18px;
  margin: 0 auto 0 auto;
  display: block;
  box-shadow: 0 4px 16px rgba(0,0,0,0.10);
}

.detail-card {
  background: #fff;
  border-radius: 18px;
  margin: 20rpx 16rpx 0 16rpx;
  padding: 32rpx 24rpx 24rpx 24rpx;
  box-shadow: 0 2px 12px rgba(0,0,0,0.06);
  position: relative;
  z-index: 2;
}

.detail-badge {
  display: inline-block;
  background: #07c160;
  color: #fff;
  border-radius: 12px;
  padding: 6rpx 20rpx;
  font-size: 22rpx;
  margin-bottom: 12rpx;
}

.detail-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #222;
  margin: 12rpx 0 8rpx 0;
}

.detail-rating {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
}

.star {
  color: #ffd700;
  font-size: 24rpx;
  margin-right: 8rpx;
}

.score {
  color: #666;
  font-size: 20rpx;
}

.detail-location, .detail-time {
  color: #888;
  font-size: 22rpx;
  margin-bottom: 8rpx;
}

.detail-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
  margin-bottom: 12rpx;
}

.tag {
  background: #f7f7f7;
  color: #ff4757;
  border-radius: 8rpx;
  padding: 4rpx 16rpx;
  font-size: 20rpx;
}

.detail-price {
  margin: 16rpx 0 8rpx 0;
  font-size: 28rpx;
  color: #ff4757;
  font-weight: bold;
}

.detail-desc {
  background: #f8f8f8;
  border-radius: 12rpx;
  padding: 20rpx;
  margin: 24rpx 0 0 0;
  color: #444;
  font-size: 22rpx;
  line-height: 1.7;
}

.detail-reserve-btn {
  flex: 1;
  margin: 0;
  display: block;
  background: linear-gradient(90deg, #ff4757 0%, #faba43 100%);
  color: #fff;
  border: none;
  border-radius: 32rpx 0 0 32rpx;
  font-size: 28rpx;
  font-weight: bold;
  padding: 20rpx 0;
  box-shadow: none;
}

.detail-favorite-btn {
  flex: 1;
  margin: 0;
  display: block;
  background: linear-gradient(90deg, #faba43 0%, #ffe865 100%);
  color: #fff;
  border: none;
  border-radius: 0 32rpx 32rpx 0;
  font-size: 28rpx;
  font-weight: bold;
  padding: 20rpx 0;
  box-shadow: none;
}
.detail-favorite-btn[disabled], .detail-favorite-btn[aria-disabled="true"] {
  background: #f7f7f7;
  color: #bbb;
  border-color: #eee;
}

.comment-section {
  margin: 32rpx 16rpx 0 16rpx;
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 2px 8px rgba(0,0,0,0.04);
  padding: 24rpx 0 0 0;
}

.comment-list {
  padding: 0 24rpx;
}

.comment-item, .reply-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 18rpx;
}

.avatar {
  width: 58rpx;
  height: 58rpx;
  border-radius: 50%;
  margin-right: 16rpx;
  box-shadow: 0 2px 8px rgba(0,0,0,0.06);
}

.comment-content {
  flex: 1;
  background: #f7f7f7;
  border-radius: 12rpx;
  padding: 12rpx 16rpx;
  color: #333;
  font-size: 24rpx;
}

.nickname {
  color: #ff4757;
  font-weight: bold;
  margin-right: 8rpx;
}

.content {
  margin-left: 4rpx;
}

.time {
  color: #aaa;
  font-size: 19rpx;
  margin-left: 8rpx;
}

.comment-actions {
  margin-top: 8rpx;
  display: flex;
  gap: 12rpx;
}
.comment-actions button {
  min-width: 60rpx;
  height: 44rpx;
  padding: 0 16rpx;
  font-size: 22rpx;
  border-radius: 20rpx;
  background: #f0f0f0;
  color: #666;
  border: none;
  margin: 0;
  line-height: 44rpx;
}
.comment-actions button:first-child {
  background: #e6f7ff;
  color: #1890ff;
}
.comment-actions button:last-child {
  background: #fff0f0;
  color: #ff4757;
}

.comment-input-bar {
  display: flex;
  align-items: center;
  padding: 16rpx 24rpx 24rpx 24rpx;
  gap: 12rpx;
  background: #fff;
  border-radius: 0 0 16rpx 16rpx;
  box-shadow: 0 2px 8px rgba(0,0,0,0.03);
}

.comment-input-bar input {
  flex: 3;
  border: 1px solid #eee;
  border-radius: 20rpx;
  padding: 12rpx 16rpx;
  font-size: 22rpx;
  background: #f7f7f7;
}

.comment-input-bar button {
  flex: 1;
  background: #07c160;
  color: #fff;
  border: none;
  border-radius: 20rpx;
  padding: 20rpx 24rpx;
  font-size: 22rpx;
}

.empty {
  text-align: center;
  color: #bbb;
  font-size: 22rpx;
  margin: 32rpx 0;
}

.booking-modal-mask {
  position: fixed; left: 0; top: 0; right: 0; bottom: 0;
  background: rgba(0,0,0,0.3); z-index: 1000;
}
.booking-modal {
  position: fixed; left: 50%; top: 50%; transform: translate(-50%, -50%);
  background: #fff; border-radius: 16rpx; width: 80vw; z-index: 1001;
  box-shadow: 0 4px 24px #0002; padding: 32rpx 24rpx;
  display: flex; flex-direction: column; gap: 24rpx;
}
.booking-modal-title {
  font-size: 32rpx; color: #ff4757; font-weight: bold; text-align: center; margin-bottom: 12rpx;
}
.booking-modal-row {
  display: flex; align-items: center; gap: 16rpx; font-size: 28rpx;
}
.picker-value {
  color: #333; background: #f7f7f7; border-radius: 8rpx; padding: 8rpx 20rpx;
}
.booking-modal-btn {
  background: #ff4757; color: #fff; border: none; border-radius: 12rpx; font-size: 28rpx; padding: 16rpx 0;
}
.booking-modal-cancel {
  background: #f0f0f0; color: #888; border: none; border-radius: 12rpx; font-size: 28rpx; padding: 16rpx 0;
  margin-top: 8rpx;
}

.reply-indent {
  margin-left: 48rpx;
  margin-top: 8rpx;
  display: block;
  width: 100%;
}
.reply-item {
  display: block;
  width: 100%;
}
.reply-item .comment-content {
  word-break: break-all;
  white-space: pre-line;
  flex: 1;
  display: block;
}

.star-btn {
  width: 50rpx;
  height: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 50rpx;
  color: #ffd700;
  background: transparent;
  border: none;
  border-radius: 50%;
  margin-left: 8rpx;
  transition: color 0.2s;
}
.star-btn-active {
  background: #ffd700;
  color: #fff;
  border: 2rpx solid #ffd700;
}

/* 让立即报名按钮居中显示 */
.button-group {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
}
.reserve-btn {
  flex: 1;
  margin-right: 8rpx;
}
