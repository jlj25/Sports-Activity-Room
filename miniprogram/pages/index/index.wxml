<!--index.wxml-->

<!-- 顶部分类标签 -->
<scroll-view class="category-tabs" scroll-x>
  <view class="tab {{activeCategory == idx ? 'active' : ''}}" wx:for="{{categories}}" wx:key="index" data-idx="{{idx}}" bindtap="onCategoryTap">{{item}}</view>
</scroll-view>

<!-- 筛选栏 -->
<view class="filter-bar">
  <view class="filter-item" wx:for="{{filters}}" wx:key="index" data-idx="{{idx}}" bindtap="onFilterTap">{{item}} ▼</view>
</view>

<!-- 活动室列表 -->
<scroll-view class="venue-list" scroll-y>
  <view wx:for="{{venues}}" wx:key="id" class="venue-card" bindtap="navigateToDetail" data-id="{{item.id}}">
    <image src="{{item.cover}}" class="venue-img" mode="aspectFill" />
    <view class="venue-badge">在线订场</view>
    <view class="venue-info">
      <text class="venue-title">{{item.name}}</text>
      <view class="venue-rating">
        <text class="star">★★★★★</text>
        <text class="score">{{item.rating}}</text>
      </view>
      <text class="venue-location">{{item.location}}</text>
      <view class="venue-tags">
        <text wx:for="{{item.sports}}" wx:key="index" class="tag">{{item}}</text>
      </view>
      <view class="venue-price">
        <text class="price">￥{{item.price}}</text>
        <text class="unit">/小时起</text>
      </view>
    </view>
  </view>
</scroll-view>

