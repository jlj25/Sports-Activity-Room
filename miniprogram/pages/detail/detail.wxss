.detail-container {
  padding: 0 32rpx 32rpx 32rpx;
  background: #fff;
  min-height: 100vh;
}
.detail-img {
  width: 100%;
  height: 340rpx;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
  object-fit: cover;
}
.detail-badge {
  display: inline-block;
  background: #07c160;
  color: #fff;
  font-size: 24rpx;
  border-radius: 8rpx;
  padding: 6rpx 20rpx;
  margin-bottom: 16rpx;
}
.detail-title {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
  color: #222;
}
.detail-rating {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}
.star {
  color: #ffb400;
  font-size: 28rpx;
  margin-right: 8rpx;
}
.score {
  color: #666;
  font-size: 26rpx;
}
.detail-location {
  color: #888;
  font-size: 28rpx;
  margin-bottom: 12rpx;
}
.detail-tags {
  margin-bottom: 12rpx;
}
.tag {
  display: inline-block;
  background: #f2f2f2;
  color: #07c160;
  font-size: 24rpx;
  border-radius: 8rpx;
  padding: 4rpx 16rpx;
  margin-right: 12rpx;
}
.detail-price {
  font-size: 32rpx;
  color: #e64340;
  margin-bottom: 32rpx;
}
.price {
  font-weight: bold;
}
.unit {
  color: #888;
  font-size: 24rpx;
  margin-left: 8rpx;
}
.detail-reserve-btn {
  width: 100%;
  background: #07c160;
  color: #fff;
  font-size: 32rpx;
  border-radius: 8rpx;
  margin-top: 40rpx;
}
