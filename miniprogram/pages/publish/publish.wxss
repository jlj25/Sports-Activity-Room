.publish-container {
  padding: 40rpx 32rpx;
}
.title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 40rpx;
}
.form-item {
  margin-bottom: 32rpx;
}
.form-item text {
  display: block;
  margin-bottom: 12rpx;
  color: #333;
  font-size: 28rpx;
}
input, picker {
  width: 100%;
  padding: 20rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  font-size: 28rpx;
  background: #fafafa;
}
.submit-btn {
  width: 100%;
  background: #07c160;
  color: #fff;
  font-size: 32rpx;
  border-radius: 8rpx;
  margin-top: 40rpx;
} 