.my-container {
  padding: 40rpx 0;
  background: #f7f7f7;
  min-height: 100vh;
}
.user-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 40rpx;
}
.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: #eee;
}
.nickname {
  margin-top: 20rpx;
  font-size: 32rpx;
  color: #222;
  font-weight: normal;
  margin-right: 8rpx;
  cursor: pointer;
}
.my-list {
  background: #fff;
  border-radius: 16rpx;
  margin: 0 32rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.04);
}
.my-item {
  padding: 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
  font-size: 30rpx;
  color: #666;
}
.my-item:last-child {
  border-bottom: none;
}
.modal-mask {
  position: fixed; left: 0; top: 0; right: 0; bottom: 0;
  background: rgba(0,0,0,0.4); z-index: 1000;
}
.modal-content {
  position: fixed; left: 50%; top: 50%; transform: translate(-50%, -50%);
  background: #fff; border-radius: 12px; width: 80vw; z-index: 1001;
  box-shadow: 0 4px 24px #0002; padding: 20px;
}
.modal-header {
  position: relative;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.close-btn {
  background: #fff;
  color: #e64340;
  border: none;
  border-radius: 50%;
  font-size: 40rpx;
  width: 56rpx;
  height: 56rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2px 8px rgba(0,0,0,0.08);
  position: absolute;
  right: 0rpx;
  top: 0rpx;
  z-index: 10;
  padding: 0;
}
.activity-item { margin: 12px 0; border-bottom: 1px solid #eee; padding-bottom: 8px; }
.empty { text-align: center; color: #888; margin: 20px 0; }
.venue-name {
  font-size: 32rpx;
  color: #222;
  font-weight: bold;
  margin-bottom: 12rpx;
}
.booking-info {
  font-size: 26rpx;
  color: #666;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}
/* 优化模态框内容区样式 */
.activity-item, .favorite-item {
  background: #fff;
  border-radius: 16rpx;
  margin: 0 32rpx 24rpx 32rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.04);
  padding: 32rpx 24rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.activity-item > text, .favorite-item > text {
  font-size: 32rpx;
  color: #ff4757;
  font-weight: bold;
}
.activity-item button, .favorite-item button {
  background: #f0f0f0;
  color: #e64340;
  border: none;
  border-radius: 8rpx;
  font-size: 26rpx;
  padding: 8rpx 20rpx;
  margin-left: 16rpx;
}
.modal-header text {
  font-size: 36rpx;
  color: #07c160;
  font-weight: bold;
}
.settings-list {
  background: #fff;
  border-radius: 16rpx;
  margin: 0 32rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.04);
}
.settings-item {
  padding: 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
  font-size: 30rpx;
  color: #666;
  background: #fff;
  text-align: left;
}
.settings-item:last-child {
  border-bottom: none;
}
.logout-btn {
  background: none;
  color: rgba(0,0,0,0.7);
  border: none;
  font-size: 30rpx;
  font-weight: normal;
  padding: 0;
  width: 100%;
  text-align: left;
}
.admin-btn {
  background: none;
  color: rgba(0,0,0,0.7);
  border: none;
  font-size: 30rpx;
  font-weight: normal;
  padding: 0;
  width: 100%;
  text-align: left;
}
.settings-back-btn {
  position: fixed;
  top: 36rpx;
  left: 36rpx;
  z-index: 1001;
  background: rgba(255,255,255,0.8);
  border-radius: 50%;
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  color: rgba(0,0,0,0.7);
  box-shadow: 0 2px 8px rgba(0,0,0,0.08);
  border: none;
  padding: 0;
  font-weight: bold;
}
.login-btn-row {
  display: flex;
  flex-direction: row;
  gap: 24rpx;
  margin: 32rpx 32rpx 0 32rpx;
}
.login-btn {
  flex: 1;
  background: #07c160;
  color: #fff;
  border: none;
  border-radius: 20rpx;
  font-size: 28rpx;
  padding: 18rpx 0;
}
.login-btn.account {
  background: #ffb300;
  color: #fff;
}
.login-modal {
  min-width: 70vw;
  padding: 32rpx 24rpx 24rpx 24rpx;
}
.modal-body {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  margin-bottom: 24rpx;
}
.modal-input {
  border: 1rpx solid #eee;
  border-radius: 12rpx;
  padding: 18rpx 20rpx;
  font-size: 28rpx;
  background: #f7f7f7;
}
.modal-btn {
  width: 100%;
  background: #07c160;
  color: #fff;
  border: none;
  border-radius: 20rpx;
  font-size: 28rpx;
  padding: 18rpx 0;
  margin-top: 8rpx;
}
.modal-footer {
  display: flex;
  justify-content: flex-end;
  margin-top: 8rpx;
}
.modal-link-btn {
  background: none;
  color: #2196f3;
  border: none;
  font-size: 26rpx;
  padding: 0;
  text-align: right;
}
.modal-link-text {
  color: #2196f3;
  font-size: 26rpx;
  text-align: right;
  display: block;
  margin-top: 8rpx;
  cursor: pointer;
}
.admin-panel {
  display: flex;
  gap: 24rpx;
  margin: 0 32rpx 24rpx 32rpx;
}
.admin-panel-btn {
  flex: 1;
  background: #07c160;
  color: #fff;
  border: none;
  border-radius: 16rpx;
  font-size: 28rpx;
  padding: 18rpx 0;
  font-weight: bold;
}
.admin-modal {
  min-width: 70vw;
  padding: 32rpx 24rpx 24rpx 24rpx;
}
.activity-btn-group {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  margin-top: 16rpx;
}
.activity-btn-group button {
  width: 120rpx;
  margin: 0 auto;
  font-size: 22rpx;
  padding: 8rpx 0;
}
